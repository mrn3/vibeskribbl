{
  "name": "vibeskribbl",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:server": "tsc --project tsconfig.server.json && node server.js",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "node server.js",
    "start:pm2": "npx pm2 start ecosystem.config.js --env production",
    "pm2:stop": "npx pm2 stop vibeskribbl",
    "pm2:restart": "npx pm2 restart vibeskribbl",
    "pm2:logs": "npx pm2 logs vibeskribbl",
    "pm2:monit": "npx pm2 monit",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "15.2.2",
    "pm2": "^6.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "@types/webpack": "^5.28.5",
    "babel-jest": "^29.7.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rewire": "^7.0.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.2.6",
    "typescript": "^5"
  }
}
